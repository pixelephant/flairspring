<div id="login-box">
	<h4>Regisztrált vásárlónk?</h4>
	<% if flash[:alert].blank? %>
  	<p><span class="lead">Jelentkezzen be</span><%= logintext %></p>
  <% else %>
		<div class="error-box">
			<p><%= flash[:alert] %></p>
		</div>
  <% end %>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <fieldset><%= f.label :email, "E-mail cím" %>
		  <%= f.email_field :email, :class => "required email" %></fieldset>

		  <fieldset><%= f.label :password, "Jelszó" %>
		  <%= f.password_field :password, :class => "required" %></fieldset>

		  <% if devise_mapping.rememberable? -%>
		    <!--div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div-->
		  <% end -%>

		  <fieldset><%= f.submit "Bejelentekzés" %></fieldset>

		  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  			<%= link_to "Elfelejtette a jelszavát?", new_password_path(resource_name), :class => "forgot" %>
			<% end -%>
		<% end %>
</div>