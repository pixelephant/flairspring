<header id="main-header">
	<div class="inner">
		<h1 id="logo">
			<a href="/">
				<%= image_tag 'logo.png', :title => 'Flairpsring - Comfort on your side' %>
			</a>
		</h1>
		<p id="help-text" class="simple">
			Segíthetünk? Hívja ügyfélszolgálatunkat: +36-30-375-8600
		</p>
	</div>	
</header>

<div id="main-wrap">
	<%= yield %>
</div>

<%= render 'home/footer' %>
</body>
</html>
