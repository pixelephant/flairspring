<h1>Listing photos</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Image url</th>
    <th>Alt</th>
    <th>Default</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.product.name %></td>
    <td><%= image_tag photo.image_url(:thumb) if photo.image? %></td>
    <td><%= photo.alt %></td>
    <td><%= photo.default %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

