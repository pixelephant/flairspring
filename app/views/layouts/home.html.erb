<header id="main-header">
	<%= render 'home/misc_nav' %>
	<div id="header-wrapper">
		<a href="/">
			<% if params[:controller] == 'home' %>
			<h1 id="logo">
				Flairspring<span>Comfort on your side</span>
			</h1>
			<% else %>
			  <h2 id="logo">
				Flairspring<span>Comfort on your side</span>
			</h2>
			<% end %>
		</a>
		<span class="helptext">
			<em>Segíthetünk?</em> <span class="lead">Hívja ügyfélszolgálatunkat</span>
			<span class="telephone">+36-30-375-8600</span>
		</span>
		<div id="minicart-wrapper">
			<%= render 'home/minicart' %>
		</div>
		<%= render :partial => 'home/top_search' %>
		<nav id="main-nav">
			<ul class="clearfix">
				<%= render 'home/categories_top' %>
			</ul>
		</nav>
		<% if params[:controller] != 'home'%>
		<nav id="breadcrumb" class="clearfix">
			<p>
				<%= render :partial => 'home/breadcrumb', :locals => {:controller => params['controller']} %>
			</p>
		</nav>
		<% end %>
	</div>
	<% if params[:controller] == 'home'%>
		<%= render 'slider' %>
	<% end %>
</header>

<div id="main-wrap">
	<%= yield %>
</div>

<section id="social-promo">
	<%= render 'home/newsletter' %>
	<%= render 'home/shops_promo' %>
</section>

