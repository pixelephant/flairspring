<section id="register" class="box full clearfix">
	<h3 id="top">Regisztráció <!--span id="secure">Secure connection</span--></h3>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  	<%= devise_error_messages! %>
		<div class="block">
			<h5>Felhasználói adatok <a href="#" title="Ezzel tudsz majd bejelentkezni" class="tooltip">?</a></h5>
			<p id="starred">(A sikeres vásárláshoz a csillaggal jelölt mezők kitöltése mindenképpen szükséges!)</p>
			<fieldset>
				<%= f.label :email, "E-mail cím *" %>
  				<%= f.email_field :email, :class => ["required","email"] %>
			</fieldset>
			<fieldset>
				<%= f.label :password, "Jelszó *" %>
  				<%= f.password_field :password %>
			</fieldset>
			<fieldset>
				<%= f.label :password_confirmation, "Jelszó megerősítése *" %>
  				<%= f.password_field :password_confirmation %>
			</fieldset>
		</div>
		
		<div class="block">
			<h5>Kapcsolattartási információk</h5>
			<fieldset>
				<div class="half">
					<%= f.label :title_name, "Titulus" %>
	  			<%= f.text_field :title_name, :size => 5 %>
				</div>
				<div class="half">
					<%= f.label :last_name, "Vezetéknév" %>
	  			<%= f.text_field :last_name %>
				</div>
				<div class="half">
					<%= f.label :first_name, "Keresztnév" %>
	  			<%= f.text_field :first_name %>
				</div>
			</fieldset>
			<fieldset>
				<%= f.label :phone, "Telefonszám" %>
				<%= f.phone_field :phone %>
				<p id="tel_example">Pl.: +36-20-555-5555</p>
			</fieldset>
		</div>

			<% @user.addresses.build %>
			<div class="block">
				<h5>Szállítási információk <a href="#" title="" class="tooltip">?</a></h5>
				<% i = 0 %>
				<%= f.fields_for :addresses do |builder| %>
					<% if i == 0 %>
		    		<fieldset>
		    			<div class="half">
								<%= builder.label :zip, "Irányítószám" %>
				  				<%= builder.text_field :zip, :class => ["digits"], :minlength => 4, :length => 4 %>
								<!--label for="register-zip">Irányítószám</label>
								<input type="text" name="regsiter-zip" id="register-zip" /-->
							</div>
							<div class="half">
								<%= builder.label :city, "Város" %>
				  				<%= builder.text_field :city, :class => [] %>
								<!-- <label for="regsiter-city">Város</label>
								<input type="text" name="regsiter-city" id="register-city" /> -->
							</div>
						</fieldset>
						<fieldset>
							<%= builder.label :additional, "Cím" %>
			  				<%= builder.text_field :additional, :class => [] %>
							<!-- <label for="register-address">Cím</label>
							<input type="text" name="regsiter-address" id="register-address" /> -->
						</fieldset>
						<% i = i+1 %>
					<% end %>
	  		<% end %>
			</div>
			<div class="block">
				<h5>Számlázási információk</h5>
				<fieldset>
					<%= label_tag "same", "Megegyezik a szállítási adatokkal", :id => "same_l" %>
					<%= check_box_tag "same" %>
				</fieldset>
				<% i = 0 %>
				<%= f.fields_for :addresses do |builder| %>
					<% if i == 0 %>
						<%= builder.hidden_field :billing, :value => true %>
						<fieldset>
							<%= builder.label :name, "Számlázási név" %>
							<%= builder.text_field :name %>
						</fieldset>
	    			<fieldset>
	    				<div class="half">
								<%= builder.label :zip, "Irányítószám" %>
				  				<%= builder.text_field :zip, :class => ["digits"], :minlength => 4, :length => 4 %>
								<!--label for="register-zip">Irányítószám</label>
								<input type="text" name="regsiter-zip" id="register-zip" /-->
							</div>
							<div class="half">
								<%= builder.label :city, "Város" %>
				  				<%= builder.text_field :city, :class => [] %>
								<!-- <label for="regsiter-city">Város</label>
								<input type="text" name="regsiter-city" id="register-city" /> -->
							</div>
						</fieldset>
						<fieldset>
							<%= builder.label :additional, "Cím" %>
			  				<%= builder.text_field :additional, :class => [] %>
							<!-- <label for="register-address">Cím</label>
							<input type="text" name="regsiter-address" id="register-address" /> -->
						</fieldset>
						<% i = i + 1 %>
	  			<% end %>
	  		<% end %>
		</div>
		
		<div class="block">
			<filedset>
				<%= f.submit "Regisztráció" %>
			</filedset>
		</div>
	<% end %>

</section>