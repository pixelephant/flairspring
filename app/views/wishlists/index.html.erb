<h1>Listing wishlists</h1>

<table>
  <tr>
    <th>Custom url</th>
    <th>User</th>
    <th>Public</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wishlists.each do |wishlist| %>
  <tr>
    <td><%= wishlist.custom_url %></td>
    <td><%= wishlist.user_id %></td>
    <td><%= wishlist.public %></td>
    <td><%= link_to 'Show', wishlist %></td>
    <td><%= link_to 'Edit', edit_wishlist_path(wishlist) %></td>
    <td><%= link_to 'Destroy', wishlist, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

