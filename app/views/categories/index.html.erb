<div class="clearfix" id="category-<%= @category.slug %>">
	<%= link_to(category_path(@category) + "/osszes", :class => "chead") do %>
		<h3><%= @category.ribbon_text %></h3>
		<%= image_tag @category.image_file unless @category.image_file.blank? %>
	<% end %>
	<div class="clearfix">
		<section id="sidebar">
			<nav id="category-nav">
				<%= render "home/category_menu_left" %>
			</nav>
		</section>

		<section id="sub-list">
			<% @custom_categories.each do |custom_category| %>
				<div class="sub">
						<%= link_to (category_path(@category) + "/" + custom_category.slug) do %>
							<h3><%= custom_category.name %></h3>
							<%= custom_category.image_file.blank? ? custom_category.name : image_tag(custom_category.image_file) %>
						<% end %>
				</div>
			<% end %>			
			
		</section>
	</div>
	<div id="tab-wrap" class="tab-container">
		<ul class="etabs">
		  <li class="tab">
		    <a href="#tab-1">Kanapék</a>
		  </li>
		  <li class="tab">
		  	<a href="#tab-2">Komfort</a>
		  </li>
		  <li class="tab">
		    <a href="#tab-3">Dőlés</a>
		  </li>
		  <li class="tab">
		    <a href="#tab-4">Irányítás</a>
		  </li>
		  <li class="tab">
		    <a href="#tab-5">Kihúzható</a>
		  </li>
		  <li class="tab">
		    <a href="#tab-6">Családi</a>
		  </li>
		</ul>
		<div class="tab-div" id="tab-1">
			<%= image_tag "tabs/2.png" %>
		</div>
		<div class="tab-div" id="tab-2">
			<%= image_tag "tabs/4.png" %>
		</div>
		<div class="tab-div" id="tab-3">
			<%= image_tag "tabs/7.png" %>
		</div>
		<div class="tab-div" id="tab-4">
			<%= image_tag "tabs/8.png" %>
		</div>
		<div class="tab-div" id="tab-5">
			<%= image_tag "tabs/9.png" %>
		</div>
		<div class="tab-div" id="tab-6">
			<%= image_tag "tabs/13.png" %>
		</div>
	</div>
</div>